{
  "name": "mad-desktop",
  "version": "0.1.0",
  "description": "MAD Desktop Application - Multi-Agent Debate with Browser Automation",
  "author": "MAD Team",
  "main": "dist/main/electron/main.js",
  "build": {
    "appId": "com.mad.desktop",
    "productName": "MAD Desktop",
    "directories": {
      "output": "dist/release"
    },
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "scripts": {
    "dev": "vite",
    "dev:electron": "npm run build:electron && vite build && electron .",
    "build": "npm run build:electron && vite build && electron-builder",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:win": "npm run build:electron && vite build && electron-builder --win",
    "preview": "npm run build:electron && vite build && electron .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.0",
    "eslint": "^9.39.2",
    "jsdom": "^23.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
