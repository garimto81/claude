{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "vscode-projects.schema.json",
  "title": "VSCode Projects Configuration",
  "description": "Configuration schema for Multi-VSCode IDE Launcher",
  "type": "object",
  "required": ["version", "projects"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration file version",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "projects": {
      "type": "array",
      "description": "List of projects to open in VSCode",
      "items": {
        "type": "object",
        "required": ["name", "path"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Display name for the project",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "description": "Absolute path to the project folder"
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether to include this project when launching",
            "default": true
          }
        }
      }
    },
    "settings": {
      "type": "object",
      "description": "Global settings for the launcher",
      "properties": {
        "terminalLayout": {
          "type": "string",
          "description": "How to arrange VSCode windows",
          "enum": ["grid", "horizontal", "vertical", "cascade"],
          "default": "grid"
        },
        "autoExecuteClaude": {
          "type": "boolean",
          "description": "Whether to automatically execute Claude command in terminals",
          "default": true
        },
        "claudeArgs": {
          "type": "string",
          "description": "Arguments to pass to claude command",
          "default": "--dangerously-skip-permissions"
        },
        "startupDelayMs": {
          "type": "integer",
          "description": "Delay between launching each VSCode instance (milliseconds)",
          "minimum": 0,
          "maximum": 5000,
          "default": 500
        },
        "maxRetries": {
          "type": "integer",
          "description": "Maximum retry attempts for failed launches",
          "minimum": 0,
          "maximum": 10,
          "default": 3
        }
      }
    }
  }
}
