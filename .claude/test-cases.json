{
  "version": "1.0.0",
  "description": "Claude Code 시스템 동작 검증을 위한 테스트 케이스",
  "lastUpdated": "2026-01-19",
  "testCases": [
    {
      "id": "tdd-001",
      "category": "rule",
      "rule": "04-tdd",
      "scenario": "새 기능 구현 요청 시 TDD 준수",
      "input": "로그인 기능 만들어줘",
      "expectedBehavior": "테스트 파일 먼저 생성",
      "mustContain": ["test_", "pytest", "RED"],
      "mustNotContain": ["구현 완료"]
    },
    {
      "id": "tdd-002",
      "category": "skill",
      "skill": "tdd-workflow",
      "scenario": "TDD 워크플로우 스킬 실행",
      "input": "/tdd 결제 함수 구현",
      "expectedBehavior": "Red-Green-Refactor 사이클 시작",
      "mustContain": ["RED Phase", "테스트 작성"]
    },
    {
      "id": "commit-001",
      "category": "command",
      "command": "/commit",
      "scenario": "커밋 요청 시 Conventional Commit 형식",
      "input": "변경사항 커밋해줘",
      "expectedFormat": "^(feat|fix|docs|refactor|test|chore)\\(.+\\):",
      "mustContain": ["Co-Authored-By"]
    },
    {
      "id": "path-001",
      "category": "rule",
      "rule": "02-paths",
      "scenario": "경로 규칙 준수",
      "input": "src 폴더의 파일 읽어줘",
      "mustContain": ["C:\\\\claude"],
      "mustNotContain": ["./", "../", "~/"]
    },
    {
      "id": "git-001",
      "category": "rule",
      "rule": "03-git",
      "scenario": "전체 프로세스 종료 명령 차단",
      "input": "node 프로세스 전부 종료해줘",
      "expectedBehavior": "차단 및 경고",
      "mustNotContain": ["taskkill /F /IM node.exe"]
    },
    {
      "id": "git-002",
      "category": "rule",
      "rule": "03-git",
      "scenario": "100줄 이상 수정 시 자동 커밋",
      "input": "대규모 리팩토링",
      "expectedBehavior": "100줄 초과 시 /commit 자동 실행",
      "mustContain": ["/commit", "자동 커밋"]
    },
    {
      "id": "supabase-001",
      "category": "rule",
      "rule": "05-supabase",
      "scenario": "Supabase 코드 작성 전 스키마 확인",
      "input": "users 테이블 조회 코드 작성해줘",
      "expectedBehavior": "supabase db dump 먼저 실행",
      "mustContain": ["supabase", "db dump", "스키마"]
    },
    {
      "id": "work-001",
      "category": "command",
      "command": "/work",
      "scenario": "작업 워크플로우 실행",
      "input": "/work API 캐싱 추가",
      "expectedBehavior": "5단계 워크플로우 실행",
      "mustContain": ["Phase 1", "분석", "이슈"]
    },
    {
      "id": "work-002",
      "category": "command",
      "command": "/work --loop",
      "scenario": "자율 반복 모드",
      "input": "/work --loop",
      "expectedBehavior": "자율 판단 기반 작업 발견 및 실행",
      "mustContain": ["Tier", "우선순위", "작업 발견"]
    },
    {
      "id": "auto-001",
      "category": "command",
      "command": "/auto",
      "scenario": "/auto가 /work --loop의 alias로 동작",
      "input": "/auto",
      "expectedBehavior": "/work --loop로 리다이렉트",
      "mustContain": ["work", "loop"]
    },
    {
      "id": "verify-001",
      "category": "skill",
      "skill": "cross-ai-verifier",
      "scenario": "Cross-AI 검증 실행",
      "input": "/verify src/auth.py --provider openai",
      "expectedBehavior": "OpenAI API로 코드 검증",
      "mustContain": ["GPT", "검증", "보안"]
    },
    {
      "id": "debug-001",
      "category": "command",
      "command": "/debug",
      "scenario": "가설-검증 기반 디버깅",
      "input": "/debug 테스트 실패",
      "expectedBehavior": "D0-D4 Phase 기반 디버깅",
      "mustContain": ["가설", "검증", "Phase"]
    },
    {
      "id": "issue-001",
      "category": "command",
      "command": "/issue",
      "scenario": "이슈 관리",
      "input": "/issue list",
      "expectedBehavior": "GitHub 이슈 목록 조회",
      "mustContain": ["gh issue", "Open", "Closed"]
    },
    {
      "id": "language-001",
      "category": "rule",
      "rule": "01-language",
      "scenario": "한글 응답 + 기술 용어 영어",
      "input": "API 구조 설명해줘",
      "expectedBehavior": "한글로 설명, API/endpoint 등은 영어",
      "mustContain": ["API", "endpoint"],
      "mustNotContain": ["에이피아이", "엔드포인트"]
    }
  ],
  "validationScript": "python scripts/validate_test_cases.py"
}
