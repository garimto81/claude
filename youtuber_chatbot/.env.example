# YOUTUBE_CHANNEL_ID=                 # 채널 ID (UC로 시작)

# YouTube 인증 쿠키 (채팅 전송에 필요)
# 브라우저 개발자도구 → Application → Cookies → youtube.com 에서 복사
# YT_SAPISID=
# YT_APISID=
# YT_HSID=
# YT_SID=
# YT_SSID=

# 챗봇 설정
BOT_NAME=CodingBot
RESPONSE_DELAY_MS=500
MAX_RESPONSE_LENGTH=200
